<h1 style='padding: 15px'>Schedule New Appointment</h1>

<%= form_with model: @appointment, url: new_appointment_path do |f|%>
  <div class='d-flex justify-content-center align-items-center' style='padding: 20px'>
    <div class="card" style="width: 18rem; background-color: lightblue">
      <div class="card-body">
        <h3 class="card-title">New Appointment</h3>
        <div class='col-md-6 mb-4'>
          <p><strong><%= f.label :Date%></strong></p>
          <p>&nbsp&nbsp<%= @appointment.start.strftime("%Y-%m-%d") %></p>
        </div>
        <div class='col-md-6 mb-4'>
          <p><strong><%= f.label :Start_Time%></strong></p>
          &nbsp&nbsp<%= @appointment.start.to_formatted_s(:time) %>
        </div>
        <div class='col-md-6 mb-4'>
          <p><strong><%= f.label :End_Time%></strong></p>
          &nbsp&nbsp<%= @appointment.end.to_formatted_s(:time) %>
        </div>
        <div class='col-md-6 mb-4'>
          <strong><%= f.label :Purpose%></strong>
          &nbsp&nbsp<%= f.select(:app_type, options_for_select(['Cleaning', 'Root_Canal', 'Extraction', 'Orthodontion']))%>
        </div>
        <div class='col-md-6 mb-4'>
          <strong><%= f.label :Cost%></strong>
          &nbsp&nbsp
          <% if :app_type == 'Cleaning'%>
            R 200
          <% elsif :app_type == 'Root_Canal'%>
            R300
          <% elsif :app_type == 'Extraction'%>
            R350
          <% elsif :app_type == 'Orthodontion'%>
            R900
          <% end %>
        </div>
        <div class='row'>
          <div class='col-md-7 mb-3'>
            <%= f.submit 'Book' , data:{turbo_confirm: "Make this Booking?", turbo_method: :post}, class:'btn btn-primary'%>
          </div>
          <div class='col-md-4'>
            <%= link_to 'Cancel', list_of_apps_path, class:'btn btn-secondary'%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

