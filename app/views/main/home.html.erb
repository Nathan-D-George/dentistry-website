<div style='padding:10px'>
  <h1>Dentist Practice</h1>
  <div class='mt-3 mb-3 d-flex align-items-center justify-content-center'>
    <img src="https://media.istockphoto.com/id/1392326683/photo/choosing-a-shade-of-dental-veneers.webp?b=1&s=170667a&w=0&k=20&c=A9lMVSmfVRGIYWUZy8rDfKiUahLMua0ISggvn-bYWN0=" style="width:650px;height:480px;" >
  </div>

  <div class='mt-3 mb-3'>
  <% if current_user %>
    <%= button_to 'Logout', destroy_user_session_path, class:'btn btn-danger'%>
  <% else %>
    <%= link_to 'Register', new_user_registration_path, class:'btn btn-primary' %>
    <%= link_to 'Login', new_user_session_path, class:'btn btn-primary' %>
  <% end %>
  </div>

  
  <div data-aos='fade-in'>
    <h3>Who Are We?</h3>
    <%= render 'about_us' %>
  </div>

  <div data-aos='fade-left'>
    <h3>What do we Do?</h3>
    <%= render 'what_we_do' %>
  </div>
  
  <div data-aos='fade-right'>
    <h3>When Are We Open?</h3>
    <%= render 'operating_times' %>
  </div>

 
  <div data-aos='zoom-in'>
    <h3>Where are We?</h3>
    <%= render 'where_to_find_us' %>
  </div>
  
  <div data-aos='flip-up'>
    <h3>Who Can You Contact? <%= fa_icon 'phone' %></h3>
    <%= render 'contact_us' %>
  </div>

</div>